функция main() -> Пусто:
    пусть path: Строка = "build/tmp_stdlib_test.txt"

    файл_записать(path, "привет")
    утверждать(файл_существует(path), "файл должен быть создан")
    утверждать_равно(файл_читать(path), "привет", "содержимое файла должно совпадать")

    пусть data = json_разобрать("{\"a\":1,\"b\":[2,3]}")
    утверждать_равно(data["a"], 1, "json поле a")
    утверждать_равно(длина(data["b"]), 2, "json массив b")

    пусть encoded: Строка = json_строка({ "ok": истина, "n": 7 })
    утверждать(длина(encoded) > 0, "json_строка должна возвращать непустую строку")

    файл_удалить(path)
    утверждать(не файл_существует(path), "файл должен быть удалён")
    вернуть пусто
