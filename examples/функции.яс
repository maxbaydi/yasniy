# функции.яс

функция сумма_до(n: Цел) -> Цел:
    пусть s: Цел = 0
    пусть i: Цел = 1
    пока i <= n:
        s = s + i
        i = i + 1
    вернуть s

функция четное(n: Цел) -> Лог:
    если n % 2 == 0:
        вернуть истина
    иначе:
        вернуть ложь

функция reverse_text(s: Строка) -> Строка:
    пусть chars: Список[Строка] = ["а", "б", "в"]
    печать("длина строки:", длина(s))
    печать("длина списка:", длина(chars))
    вернуть s

функция main() -> Пусто:
    печать("сумма до 10 =", сумма_до(10))
    для x в [1, 2, 3, 4, 5]:
        печать("x =", x, "четное?", четное(x))
    печать("text =", reverse_text("ЯСНЫЙ"))
    вернуть пусто
