функция может_строку(flag: Лог) -> Строка?:
    если flag:
        вернуть "ok"
    иначе:
        вернуть пусто

функция эхо(x: Строка | Цел) -> Строка | Цел:
    вернуть x

функция short(label: Строка, v: Лог) -> Лог:
    печать("вычислено:", label)
    вернуть v

функция main() -> Пусто:
    пусть arr: Список[Цел] = [1, 2, 3, 4, 5]
    arr[2] = 99
    печать("arr[2] =", arr[2])

    если ложь и short("right_and", истина):
        печать("невозможно")
    если истина или short("right_or", ложь):
        печать("short-circuit ok")

    пусть i: Цел = 0
    пока i < 6:
        i = i + 1
        если i == 2:
            продолжить
        если i == 5:
            прервать
        печать("i =", i)

    печать("nullable true:", может_строку(истина))
    печать("nullable false:", может_строку(ложь))
    печать("union int:", эхо(10))
    печать("union str:", эхо("hi"))
    вернуть пусто
